/* pages/components/homeImgShow/homeImg.wxss */
@import "/static/css/icon/font-icon.wxss";
@import "/static/css/icon/font-icon-new.wxss";
.picture-content{
  width: 100%;
  padding: 0rpx;
  margin: 0rpx;
  margin-bottom: 20rpx;
  box-sizing: border-box;
}
.avatar-view{
  width: 100%;
  height: 106rpx;
  padding: 0rpx 22rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
}
.avatar-img{
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
}
.avatar-name{
  margin-left: 22rpx;
  font-size: 28rpx;
  font-weight: 600;
}
.picture-view{
  line-height: 0px;
}
.picture-img{
  width: 100%;
}
.icont-view{
  width: 100%;
  padding: 0px 27rpx;
  box-sizing: border-box; 
  margin-bottom: 24rpx;
  margin-top: 14rpx;
}

.likeicont {
  font-size: 45rpx;
  margin-right: 34rpx;
}
.chooselikes{
  font-size: 52rpx;
  margin-right: 32rpx;
  color: #e81b0c;
}
.icon-xiaoxi{
  font-size: 52rpx;
  padding-top: 2px;
  margin-right: 34rpx;
  display: inline-block;
  box-sizing: border-box;
}
.icon-dingyue{
  float: right;
  align-self: flex-end;
  font-size: 52rpx;
}
.comment-view{
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}
.like-text{
  font-weight: 600;
  display: block;
  margin-bottom: 18rpx;
}
.comment-text{
  
}
.comment-text .name {
  display: inline-block;
  margin-right: 10rpx;
  font-weight: 600;
  box-sizing: border-box;
}
.comment-all{
  display: block;
  margin-top: 10rpx;
  color: #666666;
}
.mycomment{
  height: 54rpx;
  margin-top: 27rpx;
  margin-bottom: 20rpx; 
  display: flex;
  align-items: center;
}
.small-avatar{
  width: 54rpx;
  height: 54rpx;
  border-radius: 50rpx;
}
.addcoment-tip{
  color: #aaaaaa;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.swiperheight{
  height: 750rpx;
}
.sendTime{
  font-size: 24rpx;
  color: #ddd;
}
.imgPosition{
  display: flex;
  align-items: center;
  align-content: center;
}

